{
  "name": "coin-flip-v2",
  "version": "1.0.0",
  "description": "CoinFlip DApp with VRF - Smart Contract and Frontend",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "test:local": "hardhat run scripts/test-local.ts --network localhost",
    "simulate:local": "hardhat run scripts/simulate.ts --network localhost",
    "console": "hardhat console --network localhost",
    "copy:abi": "mkdir -p src/abi && cp artifacts/contracts/CoinFlip.sol/CoinFlip.json src/abi/CoinFlip.json && cp artifacts/contracts/MockVRF.sol/MockVRF.json src/abi/MockVRF.json",
    "copy:deployments": "cp deployments/localhost.json src/deployments.localhost.json",
    "sync": "npm run copy:abi && npm run copy:deployments",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "keywords": ["blockchain", "coinflip", "vrf", "dapp", "hardhat", "react"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.85.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "wagmi": "^2.16.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@types/chai": "^5.2.2",
    "@types/node": "^22.17.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "chai": "^5.3.3",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "globals": "^16.3.0",
    "hardhat": "^3.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "viem": "^2.35.1",
    "vite": "^7.1.2"
  }
}